@model CheeseMVC.ViewModels.AddCheeseViewModel

<h2>Add Cheese</h2>

<form asp-controller="Cheese" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input required class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input required class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryID"></label>
        <select asp-for=CategoryID asp-items="Model.CheeseTypes"></select>
    </div>



    @*<div class="form-group">
