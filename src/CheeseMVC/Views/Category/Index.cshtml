@model List<CheeseMVC.Models.CheeseCategory>

@* ViewData["Title"] = "Index";*@
}

<h2>@ViewData["Title"]</h2>

@if (Model.Count != 0)
{
    <table class="table">

        <tr>
            <th>Name</th>
        </tr>

        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
            </tr>
        }
    </table>

}

else
{
    <p>No Categories yet!</p>
}

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>
<p><a asp-controller="Cheese" asp-action="Index">View Cheeses</a></p>
