@model CheeseMVC.ViewModels.ViewMenuViewModel

@{
    
    ViewBag.Title = Model.Menu.Name;
}

<h2>@ViewBag.Title</h2>

@foreach (var cheeseMenu in Model.Items)

{
    <ul> @cheeseMenu.Cheese.Name  </ul>

}

@if (Model.Items.Count == 0)
{
    <p>No menu items have been added to this menu</p>
}

<p><a asp-controller="Menu" asp-action="AddItem" asp-route-id="@Model.Menu.ID">Add Item to this Menu</a></p>