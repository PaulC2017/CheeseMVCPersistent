

@model List<CheeseMVC.Models.Menu>


<h2>Menus</h2>

<table class="table" >
    <tr>
        <th>Name</th>
        <th>Details</th>
         
    </tr>


    @foreach (var menu in Model)
    {
        <tr>
            <td>@menu.Name</td>
            <td><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id=@menu.ID>View Menu</a></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No Menus Yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>